{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Example schema for a chat in a messaging app",
    "type": "object",
    "properties": {
        "user_id": {
            "description": "Identifier for the user",
            "type": "string"
        },
        "chats": {
            "description": "Sent and received chats",
            "type": "object",
            "properties": {
                "chat_id" : {
                    "type": "string"
                },
                "content" : {
                    "type": "string"
                },
                "timestamp" :{
                    "type": "number"
                }
            }
        }
    }
}